<p id="notice"><%= notice %></p>

<h1><%= @doi.name%>'s Urls </h1>
<h3><%= @doi.desc %></h3>

<!-- this table use to be in app/views/urls/index.html.erb -->
<table>
  <thead>
      <tr>
        <th>Url</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doi.urls.each do |url| %>
        <% if !url.new_record? %>    
            <tr>
                <td><%= url.url %></td>
                <td><%= link_to 'Edit', edit_url_path(url) %></td>
                <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    <% end %>
  </tbody>
</table>
<br>
<h3>Create New URL</h3>
<%= render 'urls/form' %>
<br>
<br>
<%= link_to "Edit #{@doi.name}'s Profile", edit_doi_path(@doi) %> |
<%= link_to 'Show all Dois', dois_path %>