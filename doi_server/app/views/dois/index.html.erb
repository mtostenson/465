<h1>Find DOI's</h1>

<%= form_tag(search_path, method: "get") do %>
    <%= text_field_tag(:search_string) %>
    <%= submit_tag("Search Name") %>
<% end %>

<%= form_tag(search_path, method: "get") do %>
    <%= text_field_tag(:search_doi) %>
    <%= submit_tag("Search DOI") %>
<% end %>

<% if @dois != nil%>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Desc</th>
          <th>DOI</th>      
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        
        <% @dois.each do |doi| %>
          <tr>
            <td><%= doi.name %></td>
            <td><%= doi.desc %></td>
            <td><%= doi.doi_num %></td>        
            <td><%= link_to 'Show', doi %></td>
            <td><%= link_to 'Edit', edit_doi_path(doi) %></td>
            <td><%= link_to 'Destroy', doi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>    
      </tbody>
    </table>
<% end %>

<br>

<%= link_to 'New Doi', new_doi_path %>