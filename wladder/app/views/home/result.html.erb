<%= link_to "Play again", root_path %><br>
<h1>Result</h1>
<table border="1">
   <tr>   
      <td>Start:</td>
      <td><%=$random1%></td>
   </tr>
   <% @guesses.each_with_index do |word, i| %>   
      <% if word != "" %>         
         <tr>
            <td>Step <%=i+1%>:</td>
            <td><%=word%></td>
         </tr>
      <% end %>      
   <% end %>   
   <tr>
      <td>End:</td>
      <td><%=$random2%></td>
   </tr>
</table>
 <% if $winner == true %>    
      <h1>YOU WIN</h1>      
   <% else %>
      <h1>YOU LOSE</h1>   
<% end %>