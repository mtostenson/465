<h1>Listing Doi'ss</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dois.each do |doi| %>
      <tr>
        <td><%= doi.name %></td>
        <td><%= doi.desc %></td>        
        <td><%= link_to 'Show', url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doi', new_doi_path %>
<%= link_to "Back to #{@doi.name}'s page", doi_path(@doi) %>